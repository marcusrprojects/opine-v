{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/ssr/**",
        "function": "ssrApp"
      },
      {
        "source": "/api/categories/**",
        "function": "categories"
      },
      {
        "source": "/api/items/**",
        "function": "items"
      },
      {
        "source": "/api/follows/**",
        "function": "follows"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
    }
  ]
}
